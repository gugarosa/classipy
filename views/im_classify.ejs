<% include partials/header %>
    <!-- Main Container -->
    <div class="container">

        <!-- Header -->
        <div class="header clearfix">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
                            aria-expanded="false">
        				<span class="sr-only">Toggle navigation</span>
								<i class="fa fa-bars fa-lg header-button-bar"></i>
      				</button>
                        <div class="header-title">
                            <img src="img/codipy_logo.png" alt="Logo" class="img-responsive" hspace="5"></img>
                            <a class="navbar-brand" href="/">Codipy</a>
                        </div>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/">Home</a></li>
                            <li class="dropdown active">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tools <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Image Classification <span class="sr-only">(current)</span></a></li>
                                </ul>
                            </li>
                            <li><a href="about">About</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        <div class="jumbotron">
            <h1>Image Classification</h1>
            <div class="flow-error">
                Your browser, unfortunately, is not supported by Flow.js. The library requires support for <a href="http://www.w3.org/TR/FileAPI/">the HTML5 File API</a>                along with <a href="http://www.w3.org/TR/FileAPI/#normalization-of-params">file slicing</a>.
            </div>
            <div align="center">
                <p>Please upload your own image to try our classification. Remember that only images are allowed.<br>Maximum
                    size: 5MB</p>
                <a class="flow-browse-image btn btn-danger">Select image <i class="fa fa-picture-o"></i></a>
            </div>
            <!-- Flow.js Upload -->
            <div class="flow-progress">
                <table>
                    <tr>
                        <td width="100%">
                            <div class="progress-container">
                                <div class="progress-bar"></div>
                            </div>
                        </td>
                        <td class="progress-text" nowrap="nowrap"></td>
                        <td class="progress-pause" nowrap="nowrap">
                            <a href="#" onclick="r.upload(); return(false);" class="progress-resume-link"><i class="fa fa-play" title="Resume upload"></i></a>
                            <a href="#" onclick="r.pause(); return(false);" class="progress-pause-link"><i class="fa fa-pause" title="Pause upload"></i></a>
                            <a href="#" onclick="r.cancel(); return(false);" class="progress-cancel-link"><i class="fa fa-times" title="Cancel upload"></i></a>
                        </td>
                    </tr>
                </table>
            </div>
            <ul class="flow-list"></ul>
            <script>
                imgload();
            </script>
        </div>

        <!-- Footer -->
        <footer class="footer">
            <p class="pull-right"><a href="#">Back to top</a></p>
            <p class="pull-left">&copy; 2017 Codipy.run</p>
